<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="@string/app_name"
		android:gravity="center_horizontal" android:textSize="26sp"
		android:textColor="#000000" android:layout_marginTop="20sp"
		android:layout_marginBottom="60sp" />

	<ImageView android:layout_width="wrap_content"
		android:layout_gravity="center_horizontal"
		android:src="@drawable/obd2_logo" android:layout_height="wrap_content"/>
		
	<Button android:id="@+id/diagnose_button" android:text="Start Diagnose"
		android:layout_width="fill_parent" android:layout_height="wrap_content"/>
	<TextView android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="Select your Script:" android:id="@+id/SourceTextView" android:layout_weight="10" android:gravity="center|bottom"></TextView>
	<Spinner android:id="@+id/scriptSpinner" android:layout_height="wrap_content" android:layout_width="fill_parent"></Spinner>
		
</LinearLayout>
