<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"  android:background="#000"
	android:layout_height="fill_parent">

	<ImageView android:layout_width="wrap_content"
		android:src="@drawable/obd2_logo" android:layout_gravity="center_horizontal" android:layout_weight="0.25" android:layout_height="wrap_content"/>
		
	<Button android:id="@+id/diagnose_button" 
 android:layout_gravity="center"
		android:layout_width="128px"
android:layout_height="128px"

android:background="@drawable/buttonhighlight"
		/>
	<TextView android:textAppearance="?android:attr/textAppearanceSmall" android:text="@string/app_name_short" android:layout_width="fill_parent" android:gravity="center|center_horizontal" android:layout_height="wrap_content" android:id="@+id/versionView"></TextView>
		
		
	<TextView android:layout_width="fill_parent" android:text="Select your Script:" 
	android:id="@+id/SourceTextView" android:gravity="center|bottom" android:textColor="#888888" android:layout_height="wrap_content">
	</TextView>
	<Spinner android:id="@+id/scriptSpinner" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_gravity="bottom" ></Spinner>
		
</LinearLayout>
